<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="janus_username.client" class="%guzzle.client.class%">
            <tag name="guzzle.client" />
            <argument>http://janus.dev.ice.internal.admin.cam.ac.uk/api</argument>
            <call method="setDescription">
                <argument type="service" id="janus_username.client.service_description" />
            </call>
        </service>

        <service id="janus_username.client.service_description"
                 class="%guzzle.service_description.class%"
                 factory-class="%guzzle.service_description.class%"
                 factory-method="factory">
            <argument>%janus_username.service_description_path%</argument>
        </service>
    </services>
</container>
